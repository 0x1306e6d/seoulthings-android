<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="@dimen/thing_listitem_height">

  <TextView
    android:id="@+id/thing_listitem_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_unit_normal"
    app:layout_constraintBottom_toTopOf="@id/thing_listitem_contents"
    app:layout_constraintEnd_toStartOf="@id/thing_listitem_location"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/thing_listitem_location"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_unit_normal"
    app:layout_constraintBottom_toTopOf="@id/thing_listitem_contents"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/thing_listitem_category"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/thing_listitem_contents"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_unit_normal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/thing_listitem_category"/>

</android.support.constraint.ConstraintLayout>